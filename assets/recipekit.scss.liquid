/* Base SCSS Variables */
$heading_size: 30px;
$subheading_size: 17px;
$body_size: 15px;
$line_height: 21px;
$text_align: left;
/* End SCSS Variables */

/* Media Queries for SCSS */
$small: 600px;
$large: 1024px;
@mixin query($media) {
	@if $media == small {
		@media only screen and (max-width: $small) {
			@content;
		}
	} @else if $media == medium {
		@media only screen and (max-width: $large - 1) {
			@content;
		}
	} @else if $media == large {
		@media only screen and (min-width: $large) {
			@content;
		}
	}
}
/* End Media Queries */

